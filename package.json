{
  "name": "sonicjs",
  "version": "0.0.3",
  "description": "Headless CMS based on Cloudflare Workers",
  "main": "src/server.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:wrangler": "wrangler pages dev dist --env development --port 8786",
    "dev:esbuild": "node ./src/cms/util/build.mjs",
    "dev:tailwind": "tailwindcss -i ./src/index.css -o ./public/css/tailwind.css --watch",
    "build": "node ./src/cms/util/build.mjs",
    "deploy": "wrangler pages deploy dist",
    "test": "jest --verbose",
    "generate": "drizzle-kit generate:sqlite --schema=./src/db/schema --out=./migrations",
    "up": "wrangler d1 migrations apply sonicjs --local",
    "up:prod": "wrangler d1 migrations apply sonicjs",
    "tail": "wrangler pages deployment tail",
    "check": "run-p check:*",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier --check --cache . **/*.css",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --cache . **/*.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/jest": "^29.5.12",
    "drizzle-kit": "^0.20.14",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "esbuild-plugin-copy": "^2.1.1",
    "miniflare": "^3.20231218.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.0.4",
    "wrangler": "^3.25.0"
  },
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^2.0.0",
    "@tussle/core": "^0.7.0",
    "@tussle/middleware-cloudflareworker": "^0.7.3",
    "@tussle/state-memory": "^0.7.1",
    "@tussle/storage-r2": "^0.7.4",
    "@uppy/core": "^3.8.0",
    "@uppy/dashboard": "^3.7.1",
    "@uppy/tus": "^3.5.0",
    "date-fns": "^2.30.0",
    "drizzle-orm": "^0.29.3",
    "gridjs": "^6.0.6",
    "gridjs-react": "^6.0.1",
    "hono": "^3.11.7",
    "jest": "^29.5.0",
    "jest-environment-miniflare": "^2.14.0",
    "lokijs": "^1.5.12",
    "lucia": "^2.7.4",
    "qs": "^6.11.2",
    "uuid": "^9.0.0"
  }
}
