{
  "id": "quill-editor",
  "name": "Quill Rich Text Editor",
  "version": "1.0.0",
  "description": "Quill WYSIWYG editor integration for rich text editing. Lightweight, modern editor with customizable toolbars and dark mode support.",
  "author": "SonicJS Team",
  "homepage": "https://quilljs.com/",
  "repository": "https://github.com/lane711/sonicjs",
  "license": "MIT",
  "category": "editor",
  "tags": ["editor", "richtext", "wysiwyg", "quill", "content"],
  "dependencies": [],
  "settings": {
    "version": {
      "type": "string",
      "label": "Quill Version",
      "description": "Version of Quill to load from CDN",
      "default": "2.0.2"
    },
    "defaultHeight": {
      "type": "number",
      "label": "Default Editor Height",
      "description": "Default height in pixels for the editor",
      "default": 300
    },
    "defaultToolbar": {
      "type": "select",
      "label": "Default Toolbar",
      "description": "Default toolbar configuration",
      "default": "full",
      "options": ["full", "simple", "minimal"]
    },
    "theme": {
      "type": "select",
      "label": "Editor Theme",
      "description": "Visual theme for the editor",
      "default": "snow",
      "options": ["snow", "bubble"]
    }
  },
  "hooks": {
    "onActivate": "activate",
    "onDeactivate": "deactivate"
  },
  "routes": [],
  "permissions": {}
}
