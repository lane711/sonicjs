{
  "name": "my-sonicjs-app",
  "version": "0.1.0",
  "private": true,
  "description": "A SonicJS headless CMS application",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:reset": "sonicjs-db-reset",
    "db:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "update": "npm install @sonicjs-cms/core@latest --save",
    "update:beta": "npm install @sonicjs-cms/core@beta --save"
  },
  "dependencies": {},
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.30.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5",
    "wrangler": "^3.110.4",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
